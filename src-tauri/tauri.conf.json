{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ring HUD",
  "version": "0.1.0",
  "identifier": "com.codex.ringhud",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Ring HUD",
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "fullscreen": false,
        "visible": false,
        "alwaysOnTop": true,
        "width": 700,
        "height": 700,
        "center": false,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
